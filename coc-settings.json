{
    "languageserver": {
        "clangd": {
          "command": "clangd",
          "args": ["--background-index"],
          "rootPatterns": ["compile_flags.txt", "compile_commands.json", "build/compile_commands.json", ".vim/", ".git/", ".hg/"],
          "filetypes": ["c", "cc", "cpp", "objc", "objcpp"]
        }
    },
    "go.disable": {
        "workspaceFolders": false
    }
}
